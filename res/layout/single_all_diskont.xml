<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollingCache="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/singles_name_discont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dip"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/singles_image_discont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/singles_description_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:paddingBottom="10dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singles_category_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singles_discont_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/singles_phone_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Позвонить"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
        android:id="@+id/singles_map_diskont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="Показать на карте"
        android:textSize="20sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/site_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Перейти на сайт"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/share_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Поделиться с друзьями"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mail_diskont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Обратная связь"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>